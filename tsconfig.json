{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "baseUrl": ".",
    "rootDir": "../../",
    "jsx": "react-jsx",
    "composite": true,
    "paths": {
      "@prosopo/contract": ["../provider/packages/contract/src"],
      "@prosopo/contract/*": ["../provider/packages/contract/src/*"]
    }
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.json",
    "../provider/packages/**/*.ts",
    "../provider/packages/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    ".cache",
    "build/**/*",
    "**/build/**/*"
  ],
  "references": [
    {
      "path": "../provider/packages/contract"
    }
  ]
}
