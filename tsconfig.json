{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@prosopo/contract": ["../provider/packages/contract/src"],
      "@prosopo/contract/*": ["../provider/packages/contract/src/*"]
    }
  },
  "include": ["packages/**/*.ts", "packages/**/*.json"],
  "exclude": [
    "node_modules",
    "artifacts",
    ".cache",
    "build/**/*",
    "**/build/**/*"
  ],
  "references": [
    {
      "path": "../provider/packages/contract"
    }
  ]
}
